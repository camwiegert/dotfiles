#!/usr/bin/env bash

# Preferred
alias ls="ls -AGF"
alias cp="cp -i"
alias mv="mv -i"
alias mkdir="mkdir -p"

# Shortcuts
alias ..="cd .."
alias ...="cd ../.."
alias dots="cd ~/.dotfiles"
alias dev="cd ~/Dropbox/Dev"
alias dbx="cd ~/Dropbox"
alias bin="cd ~/.bin"
alias dt="cd ~/Desktop"

# Node
alias nn="npm init -f"
alias ns="npm install --save"
alias nd="npm install --save-dev"
alias ng="npm install --global"

# Misc
alias ip="curl http://icanhazip.com"
alias lip="ipconfig getifaddr en0"
alias server="http-server . -o -p 9000 -c-1"
